<div class="container">

    <div class="jumbotron">
        <h1 class="display-4">Welcome to Burger Chief!</h1>
        <p class="lead">We have burgers for everyone!</p>
        <hr class="my-4">
        <div class="row">
            <div class="col-lg-12">
                <h2>Add a burger below &nbsp;&nbsp;&nbsp;&nbsp;</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-9">
                <form class="burgerForm form-inline">
                    <div class="form-group">
                        <label for="">
                        </label>
                        <input type="text" class="form-control" id="burgerName" aria-describedby="emailHelp"
                            placeholder="">
                    </div>
                    <button id="burgerButton" class="btn btn-primary" type="submit">Submit</button>
                </form>
            </div>



        </div>

    </div>
    <div class="row">
        <div class="col-lg-5">
            <ul class="ulstyle">
                {{#each burgers}}
                <li>id: {{id}} burger_name: {{burger_name}} devoured: {{devoured}} </li>

                {{/each}}
            </ul>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>


        </div>
        <div class="col-lg-1"></div>
        <div class="col-lg-5">PLACEHOLDER

            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>




</div>